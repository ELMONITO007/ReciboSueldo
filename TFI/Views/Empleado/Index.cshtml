@model IEnumerable<Entities.Empleado>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div id="content-wrapper" class="d-flex flex-column">
  <!-- Main Content -->
    <div id="content">

      <!-- Begin Page Content -->
        <div class="container-fluid">
         <div class="card shadow mb-4">
              <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Lista de Empleados </h6>
              </div>
              <div class="card-body"> 
                 <div class="table-responsive">
                   <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                         <div class="col-sm-12">
                <table  class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;" >   
                  <thead>

                      <tr role="row">
                          <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 103px;">@Html.DisplayNameFor(model => model.nombre) </th>


                          <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 162px;">@Html.DisplayNameFor(model => model.apellido)</th>

                          <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 162px;">@Html.DisplayNameFor(model => model.fechaIngreso)</th>

                          <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 162px;">@Html.DisplayNameFor(model => model.cuil)</th>

                          <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 162px;">@Html.DisplayNameFor(model => model.banco)</th>

                          <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 162px;">@Html.DisplayNameFor(model => model.cuenta)</th>
                          <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 162px;">Empresa</th>
                          <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 162px;">Categoria</th>
                          <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 162px;">Departamento</th>
                          <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 162px;">Division</th>
                          <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 162px;">Acciones</th>
                      </tr>
     </thead>
       <tbody>
@foreach (var item in Model) {
           <tr role="row" class="odd">
               <td class="sorting_1">
                   @Html.DisplayFor(modelItem => item.nombre)
               </td>
               <td class="sorting_1">
                   @Html.DisplayFor(modelItem => item.apellido)
               </td>
               <td class="sorting_1">
                   @Html.DisplayFor(modelItem => item.fechaIngreso)
               </td>
               <td class="sorting_1">
                   @Html.DisplayFor(modelItem => item.cuil)
               </td>
               <td class="sorting_1">
                   @Html.DisplayFor(modelItem => item.banco)
               </td>
               <td class="sorting_1">
                   @Html.DisplayFor(modelItem => item.cuenta)
               </td>
               <td class="sorting_1">
                   @Html.DisplayFor(modelItem => item.empresa.empresa)
               </td>
               <td class="sorting_1">
                   @Html.DisplayFor(modelItem => item.categoria.categoria)
               </td>
               <td class="sorting_1">
                   @Html.DisplayFor(modelItem => item.departamento.departamento)
               </td>
               <td class="sorting_1">
                   @Html.DisplayFor(modelItem => item.division.division)
               </td>
               <td>
                   @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                   @Html.ActionLink("Ver Recibos", "index", "ReciboSueldo", new { id = item.Id },null) |
                   @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
               </td>
           </tr>
}
</tbody>
</table>

              </div>
                </div>
             </div>
               <input type="button" class="btn btn-outline-primary " style="float:right" value="Crear" onclick="location.href='@Url.Action("create", "Empleado")'" />
          
         </div>
        </div>
       </div>
      </div>
     </div>