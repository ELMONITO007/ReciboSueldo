@model Entities.Item

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/modern-business.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="d-flex flex-column" style="max-width:60%">
        <div class="container-fluid">
            <div class="card shadow mb-4">
                <div class=" card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Crear un Empleado</h6>



                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <h5 class="text-justify">
                        @Html.LabelFor(model => model.item, new { @class = "control-label col-md-2" })
                    </h5>

                    @Html.EditorFor(model => model.item, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.item, "", new { @class = "text-danger" })

                    <br />
                    <h5 class="text-justify">
                        @Html.LabelFor(model => model.porcentaje, new { @class = "control-label col-md-2" })
                    </h5>

                    @Html.EditorFor(model => model.porcentaje, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.porcentaje, "", new { @class = "text-danger" })
                    <br />

            

                    <h5 class="text-justify">
                        @Html.LabelFor(model => model.Tipo, new { @class = "control-label col-md-2" })
                    </h5>
                    @Html.DropDownListFor(model => model.Tipo.tipoItem, (IEnumerable<SelectListItem>)ViewBag.ListaCategoria, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Tipo.tipoItem, "", new { @class = "text-danger" })
                    <br />


                   
                </div>










                <input type="button" class="btn btn-outline-primary " style="margin-left:30%;max-width:40%" value="Volver" onclick="location.href='@Url.Action("Index", "Item")'" />

                <br />

                <input type="submit" style="margin-left:30%;max-width:40%" value="Crear" class="btn btn-outline-info" />

            </div>
        </div>

    </div>
}
