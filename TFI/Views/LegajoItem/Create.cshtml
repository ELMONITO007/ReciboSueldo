@model Entities.LegajoItem

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<link href="~/Content/modern-business.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="d-flex flex-column" style="max-width:60%">
        <div class="container-fluid">
            <div class="card shadow mb-4">
                <div class=" card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Agregar un item para el Recibo de sueldo @Model.ReciboSueldo.Id</h6>



                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model =>model.ReciboSueldo.Id)
                    
                    <h5 class="text-justify">
                        @Html.LabelFor(model => model.item.item, new { @class = "control-label col-md-2" })
                    </h5>
                    @Html.DropDownListFor(model => model.item.item, (IEnumerable<SelectListItem>)ViewBag.ListaCategoria, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.item.item, "", new { @class = "text-danger" })
                    <br />

                  
                </div>










                <input type="button" class="btn btn-outline-primary " style="margin-left:30%;max-width:40%" value="Volver" onclick="location.href='@Url.Action("Index", "empleado")'" />

                <br />

                <input type="submit" style="margin-left:30%;max-width:40%" value="Crear" class="btn btn-outline-info" />

            </div>
        </div>

    </div>
}
